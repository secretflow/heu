load("@yacl//bazel:yacl.bzl", "yacl_cc_library")

package(default_visibility = ["//visibility:public"])

yacl_cc_library(
    name = "common",
    deps = [
        ":batch_encoder",
        ":he_kit",
        ":item_tool",
        ":keys",
        ":plain_encoder",
        ":pt_ct",
    ],
)

yacl_cc_library(
    name = "placeholder",
    hdrs = ["placeholder.h"],
    deps = [":keys"],
)

yacl_cc_library(
    name = "he_kit",
    hdrs = ["he_kit.h"],
    deps = [
        ":placeholder",
        "//heu/spi/he",
    ],
)

yacl_cc_library(
    name = "keys",
    srcs = ["keys.cc"],
    hdrs = ["keys.h"],
    deps = [
        "//heu/spi/he",
        "@com_github_fmtlib_fmt//:fmtlib",
    ],
)

yacl_cc_library(
    name = "item_tool",
    hdrs = ["item_tool.h"],
    deps = [
        ":placeholder",
        "//heu/spi/he",
    ],
)

yacl_cc_library(
    name = "encoder",
    hdrs = ["encoder.h"],
    deps = ["//heu/spi/he"],
)

yacl_cc_library(
    name = "plain_encoder",
    hdrs = ["plain_encoder.h"],
    deps = [":encoder"],
)

yacl_cc_library(
    name = "batch_encoder",
    hdrs = ["batch_encoder.h"],
    deps = [":encoder"],
)

yacl_cc_library(
    name = "pt_ct",
    hdrs = ["pt_ct.h"],
)
