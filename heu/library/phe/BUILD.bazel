load("@yasl//bazel:yasl.bzl", "yasl_cc_library", "yasl_cc_test")

package(default_visibility = ["//visibility:public"])

yasl_cc_library(
    name = "phe",
    srcs = ["phe.cc"],
    hdrs = ["phe.h"],
    deps = [
        ":decryptor",
        ":encryptor",
        ":evaluator",
        ":key_def",
        "//heu/library/phe/encoding",
    ],
)

yasl_cc_library(
    name = "key_def",
    hdrs = ["key_def.h"],
    deps = [
        "//heu/library/phe/base:serializable_types",
    ],
)

yasl_cc_library(
    name = "encryptor",
    srcs = ["encryptor.cc"],
    hdrs = ["encryptor.h"],
    deps = [
        "//heu/library/phe/base",
    ],
)

yasl_cc_library(
    name = "decryptor",
    srcs = ["decryptor.cc"],
    hdrs = ["decryptor.h"],
    deps = [
        "//heu/library/phe/base",
    ],
)

yasl_cc_library(
    name = "evaluator",
    srcs = ["evaluator.cc"],
    hdrs = ["evaluator.h"],
    deps = [
        "//heu/library/phe/base",
    ],
)

test_suite(
    name = "phe_tests",
)

yasl_cc_test(
    name = "encryptor_test",
    srcs = ["encryptor_test.cc"],
    deps = [":phe"],
)

yasl_cc_test(
    name = "evaluator_test",
    srcs = ["evaluator_test.cc"],
    deps = [":phe"],
)

yasl_cc_test(
    name = "phe_test",
    srcs = ["phe_test.cc"],
    deps = [":phe"],
)
